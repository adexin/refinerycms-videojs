<%#encoding: UTF-8 %>
wymeditor_boot_options.toolsItems.push({'name': 'AddVideo', 'title': 'Add_Video', 'css': 'wym_tools_add_video'});

if (WYMeditor.STRINGS['en']) WYMeditor.STRINGS['en']['Add_Video'] = '<%= I18n.t(:add_video, :scope => :wym_tools, :locale => :en) %>';
if (WYMeditor.STRINGS['es']) WYMeditor.STRINGS['es']['Add_Video'] = '<%= I18n.t(:add_video, :scope => :wym_tools, :locale => :es) %>';
if (WYMeditor.STRINGS['sk']) WYMeditor.STRINGS['sk']['Add_Video'] = '<%= I18n.t(:add_video, :scope => :wym_tools, :locale => :sk) %>';

onCloseDialog = function(){
   $('iframe#dialog_iframe').attr('src', '');
};

WYMeditor.editor.prototype.exec_without_video = WYMeditor.editor.prototype.exec;
WYMeditor.editor.prototype.exec = function(cmd) {
	if (cmd == 'AddVideo') {
		this.dialog('Video');
	} else this.exec_without_video(cmd);
}
